@model DelegationsMVC.Application.ViewModels.EmployeeVm.EmployeeDetailVm

@{
    ViewData["Title"] = "ViewEmployee";
}

<h1>Dane szczegółowe</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Imię i naziwsko:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Dział:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Numer konta:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccountCode)
        </dd>
    </dl>
    <div class="row">
        <div class="col-sm-4">
            <h2>Pojazdy</h2>
            <br />
            <table class="table table-bordered">
                <thead class=" thead-dark">
                    <tr>
                        <th>
                            Numer rejestracyjny
                        </th>
                        <th>
                            Rodzaj pojazdu
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Vehicles)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlateNumbers)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EngineType)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-1">

        </div>
        <div class="col-sm-4">
            <h2>Dane kontaktowe</h2>
            <br />
            <div class="row">
                <div class="col-sm">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Adres email
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Emails)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactDetailInformation)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-sm">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Numer telefonu
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PhoneNumbers)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactDetailInformation)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        <a asp-action="Index">Back to List</a>
    </div>
</div>