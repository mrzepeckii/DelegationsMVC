@model DelegationsMVC.Application.ViewModels.EmployeeVm.NewVehicleVm

<h4>NewVehicleVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewVehicleForEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PlateNumbers" class="control-label"></label>
                <input asp-for="PlateNumbers" class="form-control" />
                <span asp-validation-for="PlateNumbers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineTypeId" class="control-label"></label>
                <select asp-for="EngineTypeId" asp-items="@(new SelectList(Model.EngineTypes,"Id", "Name"))" class="custom-select"></select>
                <span asp-validation-for="EngineTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EmployeeId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj pojazd" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
