@model DelegationsMVC.Application.ViewModels.EmployeeVm.NewVehicleVm

    <br />
    <h4>Edytuj pojazd</h4>
    <div class="col">
        <form asp-action="EditVehicleForEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="PlateNumbers" class="control-label">Numer rejestracyjny</label>
                    <input asp-for="PlateNumbers" class="form-control" />
                    <span asp-validation-for="PlateNumbers" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="EngineTypeId" class="control-label"></label>
                    <select asp-for="EngineTypeId" asp-items="@(new SelectList(Model.EngineTypes,"Id", "Name"))" class="custom-select"></select>
                    <span asp-validation-for="EngineTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EmployeeId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-dark" />
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
