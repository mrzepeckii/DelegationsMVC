@model DelegationsMVC.Application.ViewModels.UserVm.UserDetailVm

<form asp-action="AddRolesToUser">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="row">
        <div class="col-sm-6">
            <h4>Dane</h4>
            <br/>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayName("Nazwa użytkownika:")
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayName("Email:")
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
        <div class="col-sm-6">
            <h4>Nadane prawa</h4>
            <br/>
            @foreach (var item in Model.Roles)
            {
                <div class="checkbox">
                    <label>
                        <input type="checkbox"
                               name="UserRoles"
                               value="@item.Name"
                               @if (Model.UserRoles.Contains(item.Name)) { <text> checked </text> } /> @item.Name
                        </label>
                    </div>
                }
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Nadaj prawa" class="btn btn-success" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
