@model DelegationsMVC.Application.ViewModels.UserVm.ListUsersForListVm

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped" id="table">
    <thead class=" thead-dark">
        <tr>
            <th style="text-align :center">
                Nazwa użytkownika
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a class="btn btn-info btn-sm" href="javascript:SetRoles('@item.Id')">Edytuj prawa</a>
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
<button id="DeleteRoles" style="display:none" type="button" class="btn btn-danger" onclick="ClearRoles()">Zakończ</button>
<br />
<div id="Roles">

</div>

@section Scripts{

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#table').DataTable({
                "pagingType": "full_numbers",
                "language": {
                    "lengthMenu": "Pokaż _MENU_ użytkowników na stronie",
                    "zeroRecords": "Brak pasujących użytkowników",
                    "info": "Strona _PAGE_ z _PAGES_",
                    "infoEmpty": "Brak użytkowników w bazie",
                    "infoFiltered": "(przeszukano z _MAX_ liczby rekordów)",
                    "search": "Wyszukaj: ",
                    "paginate": {
                        "first": "Pierwsza",
                        "last": "Ostatnia",
                        "next": "Następna",
                        "previous": "Poprzednia"
                    },

                },
                "columns": [
                    null,
                    { "orderable": false }
                ]
            });
        });

        function ClearRoles() {
            $('#Roles').empty();
            $('#DeleteRoles').hide();
        }

        function SetRoles(id) { 
            var $divRoles = $('#Roles');
             $divRoles.empty();
             var url = '@Url.Action("AddRolesToUser","UserRoles")?id=' + id;
            $divRoles.load(url);
            $('#DeleteRoles').show();
        }
    </script>
}
