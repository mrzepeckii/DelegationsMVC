@model DelegationsMVC.Application.ViewModels.DestinationVm.NewProjectVm

<h4>NewProjectVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
                <input asp-for="ProjectStatusId" class="form-control" value="1" />
                <div class="form-group">
                    <label asp-for="DestinationId" class="control-label"></label>
                    <select asp-for="DestinationId" asp-items="@(new SelectList(Model.Destinations,"Id", "Name"))" class="custom-select"></select>
                    <span asp-validation-for="DestinationId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Dodaj projekt" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
