@model DelegationsMVC.Application.ViewModels.RouteVm.NewRouteVm


<h4>NewRouteVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewRouteForDelegation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" value=0/>
            <input type="hidden" asp-for="DelegationId" class="form-control" />
            <div class="form-group">
                <label asp-for="TypeOfTransportId" class="control-label"></label>
                <select asp-for="TypeOfTransportId" asp-items="@(new SelectList(Model.TransportTypes,"Id", "Name"))" class="custom-select"></select>
                <span asp-validation-for="TypeOfTransportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteTypeId" class="control-label"></label>
                <select asp-for="RouteTypeId" asp-items="@(new SelectList(Model.RouteTypes,"Id", "Name"))" class="custom-select"></select>
                <span asp-validation-for="RouteTypeId" class="text-danger"></span>
            </div>
            <div class="container">
                <div class="row">
                    <div class='col-sm-6'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker'>
                                <input asp-for="RouteDetail.StartDate" type='text' class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RouteDetail.StartPoint" class="control-label">Miejsce wyjazdu</label>
                <input asp-for="RouteDetail.StartPoint" class="form-control" />
                <span asp-validation-for="RouteDetail.StartPoint" class="text-danger"></span>
            </div>
            <div class="container">
                <div class="row">
                    <div class='col-sm-6'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker2'>
                                <input asp-for="RouteDetail.EndDate" type='text' class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RouteDetail.EndPoint" class="control-label">Miejsce docelowe</label>
                <input asp-for="RouteDetail.EndPoint" class="form-control" />
                <span asp-validation-for="RouteDetail.EndPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteDetail.Kilometers" class="control-label">Miejsce docelowe</label>
                <input asp-for="RouteDetail.Kilometers" class="form-control" />
                <span asp-validation-for="RouteDetail.Kilometers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js"></script>
    <script src="//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/src/js/bootstrap-datetimepicker.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker').datetimepicker({
                locale: 'pl'
            });
        });

        $(function () {
            $('#datetimepicker2').datetimepicker({
                locale: 'pl'
            });
        });
    </script>


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
