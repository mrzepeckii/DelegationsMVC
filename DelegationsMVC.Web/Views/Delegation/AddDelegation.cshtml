                    <span asp-validation-for="Routes[1].RouteDetail.EndPoint" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label asp-for="Routes[1].RouteDetail.Kilometers" class="control-label">Kilometry</label>
