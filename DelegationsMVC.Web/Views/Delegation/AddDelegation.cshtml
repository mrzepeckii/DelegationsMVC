    <div id="AdditionalRoute" class="col-md-8">
        <div class="row">
            <div class="form-group col">
                <label asp-for="Routes[2].RouteTypeId" class="control-label">Rodzaj podróży</label>
                <select asp-for="Routes[2].RouteTypeId" asp-items="@(new SelectList(Model.RouteTypes,"Id", "Name"))" class="custom-select"></select>
